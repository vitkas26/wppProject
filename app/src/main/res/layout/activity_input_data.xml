<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.InputDataActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Spinner
                android:id="@+id/input_data_district_spinner"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp" />

            <Spinner
                android:id="@+id/input_data_spinner"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="140dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/consumption_rate_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_data_spinner"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:hint="@string/consumption_rate">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/consumption_rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/produced_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/consumption_rate_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:hint="@string/produced">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/produced"
                    android:inputType="numberDecimal"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/stock_by_population_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/produced_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:hint="@string/stock_by_population">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/stock_by_population"
                    android:inputType="numberDecimal"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/outlet_stock_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/stock_by_population_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:hint="@string/outlet_stock">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/outlet_stock"
                    android:inputType="numberDecimal"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/price_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/outlet_stock_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:hint="@string/consumption_rate">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/price"
                    android:inputType="numberDecimal"/>

            </com.google.android.material.textfield.TextInputLayout>

            <Spinner
                android:id="@+id/input_location_spinner"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_below="@id/price_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp" />
            <Button
                android:id="@+id/submit_costs"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_below="@id/input_location_spinner"
                android:layout_alignStart="@id/price_layout"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="@string/submit"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>