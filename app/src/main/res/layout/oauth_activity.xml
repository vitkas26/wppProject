<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <WebView
        android:id="@+id/oauth_activity__telegram_web_view"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/oauth_activity__phone_number_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/oauth_number_text_view"/>

    <EditText
        android:id="@+id/oauth_activity__phone_number_edit_text"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:maxLines="1"
        android:maxLength="13"
        android:text="@string/country_code"
        android:inputType="phone"
        android:autofillHints="+996555889900" />

    <Button
        android:id="@+id/oauth_activity__send_button"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"/>


</LinearLayout>