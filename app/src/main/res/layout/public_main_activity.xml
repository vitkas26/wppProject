<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView android:text="@string/work_version"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:padding="10sp"/>

    <Button android:id="@+id/input_data_btn"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:text="@string/input_data"
        android:layout_centerInParent="true" />

    <Button android:id="@+id/reports_btn"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:text="@string/reports"
        android:layout_centerInParent="true"
        android:layout_below="@+id/input_data_btn"/>

    <Button android:id="@+id/sign_in_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/sign_in"/>

</RelativeLayout>