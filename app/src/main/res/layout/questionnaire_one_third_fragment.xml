<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/producer_type_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/questionnaire_one_third_fragment__enterprise_status_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/questionnaire_one_third_fragment__active_radio_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:hint="131" />

                    <RadioButton
                        android:id="@+id/questionnaire_one_third_fragment__temp_radio_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:hint="132" />

                    <RadioButton
                        android:id="@+id/questionnaire_one_third_fragment__season_radio_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:hint="133" />

                    <RadioButton
                        android:id="@+id/questionnaire_one_third_fragment__regular_radio_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="134" />
                </RadioGroup>

            </LinearLayout>

            <TextView
                style="@style/text_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="статус (ативный, временный, сезонный, постоянный)" />

            <TextView
                style="@style/text_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Предприятие не активное" />

            <RadioButton
                android:id="@+id/questionnaire_one_third_fragment_company"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:hint="30" />

            <EditText
                android:id="@+id/questionnaire_one_third_fragment_fio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="перевод" />

            <TextView
                style="@style/text_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Владелец (директор) предприятия фамилиясы, аты, атасынын аты (ФИО)" />

            <TextView
                style="@style/text_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Координаты районного управления аграрного развития (РУАР): " />

            <EditText
                android:id="@+id/questionnaire_one_third_fragment_phone_director"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Телефон" />

            <EditText
                android:id="@+id/questionnaire_one_third_fragment_fax_director"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="факс" />

            <EditText
                android:id="@+id/questionnaire_one_third_fragment_email_director"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e-mail" />

            <EditText
                android:id="@+id/questionnaire_one_third_fragment_web_director"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Веб-сайт МСХ" />

            <Button
                android:id="@+id/questionnaire_one_third_fragment_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="далее" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>